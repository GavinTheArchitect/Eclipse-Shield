{
  "manifest_version": 3,
  "name": "Eclipse Shield",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeNetRequest",
    "webNavigation",
    "tabs",
    "webRequest"
  ],
  "action": {
    "default_popup": "redirect.html",
    "default_width": 800,
    "default_height": 800
  },
  "background": {
    "service_worker": "background-chrome.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "*://*/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:5000 http://127.0.0.1:5000; object-src 'self'; connect-src 'self' http://localhost:5000 http://127.0.0.1:5000;"
  },
  "web_accessible_resources": [
    {
      "resources": ["matrix-animation/*", "assets/*", "newtab.html"],
      "matches": ["<all_urls>"]
    }
  ]
}