# Environment Configuration for Eclipse Shield

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ECLIPSE_SHIELD_API_KEY=your-api-key-for-authentication

# Database Configuration (if using database for sessions)
# DATABASE_URL=postgresql://user:password@localhost/eclipse_shield
# DATABASE_URL=sqlite:///eclipse_shield.db

# Redis Configuration (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379/0

# API Keys
GOOGLE_API_KEY=your-google-api-key

# Security Settings
CSRF_SECRET_KEY=your-csrf-secret-key
JWT_SECRET_KEY=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/eclipse-shield/application.log

# SSL/TLS (for production)
SSL_CERTIFICATE_PATH=/path/to/ssl/certificate.crt
SSL_PRIVATE_KEY_PATH=/path/to/ssl/private.key


# SMTP Configuration (for security alerts)
# Replace the following with your own email/server details
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=example@email.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=example@email.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: blob:
CSP_CONNECT_SRC='self' chrome-extension:

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
